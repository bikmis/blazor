            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="authentication-example" Match="NavLinkMatch.All">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Authentication Example
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="icon-example">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>Icon & Bootstrap
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Roles="admin,hr">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="iis">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>IIS
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Roles="admin">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="logging">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>Logging
                </NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
