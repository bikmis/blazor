            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="employeelist">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Employee List
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="js-example" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> JS Example
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="guid" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Guid
