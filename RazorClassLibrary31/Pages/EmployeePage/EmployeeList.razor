@page "/employeelist"
@page "/employeelist/{SaveMessage}"

@layout EmployeeLayout
@attribute [Authorize(Roles = "admin")]

@if (employees == null)
{
    <div class="center fa-3x">
        <i class="fas fa-spinner fa-pulse"></i>
    </div>
}
else
{
    <h3>Employee List</h3>

    <NavLink class="mb-4 mt-3 btn btn-primary" href="employeeadd">Add Employee</NavLink>
    <Alert IsHidden="@isHidden" CloseButtonEvent="closeMessage" AlertColor="@alertColor" Message="@message" />
    <br />

    <input class="form-control" type="search" @bind-value="searchTerm" @bind-value:event="oninput" @onkeyup="search" placeholder="Search by any column" />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Date Of Birth</th>
                <th>Position</th>
                <th>Department ID</th>
                <th>Gender</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in employees)
            {
                <tr @key="employee">
                    @*key is used by a diffing algorithm for preserving elements in a collection*@
                    <td>@employee.ID</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.MiddleName</td>
                    <td>@employee.LastName</td>
                    <td>@Convert.ToDateTime(employee.DateOfBirth).ToShortDateString()</td>
                    <td>@employee.Position</td>
                    <td>@employee.DepartmentID</td>
                    <td>@employee.Gender</td>
                    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#employeeEditModal" @onclick="() => passToEditForm(employee)">Edit</button></td>
                    <td><button type="button" class="btn btn-primary" @onclick="() => deleteEmployee(employee.ID)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>

    <EmployeeEdit @ref="employeeEdit" OnEmployeeEdited="refreshEmployeesAndShowMessage"></EmployeeEdit>
}



