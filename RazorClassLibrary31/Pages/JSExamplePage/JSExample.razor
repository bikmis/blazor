@page "/js-example"

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <h3>JavaScript Example (JsInterop)</h3>

            <button class="btn btn-primary" @onclick="() => showAlert()">Show Alert</button>
            <br />
            <br />
            <label>Question: </label>
            <input @ref="questionInput" @bind="question" />
            <button @onclick="() => askQuestion()">Answer Here!</button>
            <br />
            <span>Answer: @answer</span>
            <br />
            <button @onclick="() => focusOnInputQuestion()">Focus on Question Input</button>
            <br />
            <button @onclick="() => setEmployeeToSessionStorage()">Set empoyee to Session Storage </button>
            <button @onclick="() => getEmployeeFromSessionStorage()">Get employee from Session Storage </button>
        </Authorized>
        <NotAuthorized>
            <LoginUser></LoginUser>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>




