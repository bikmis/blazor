@page "/"
@page "/home"

    <CascadingAuthenticationState>
        <AuthorizeView>
            <Authorized>
                <h1>Hello, world!</h1>
                <br />
                <br />
                Welcome to your new app.

                <SurveyPrompt Title="How is Blazor working for you?" />
            </Authorized>
            <NotAuthorized>
                <LoginUser></LoginUser>
            </NotAuthorized>
        </AuthorizeView>
    </CascadingAuthenticationState>

@code{ 

    [Inject]
    private IJSRuntime jsRuntime { get; set; }

    protected override void OnInitialized()
    {
        jsRuntime.InvokeVoidAsync("writeToConsole", "You have landed on the home page.");
        base.OnInitialized();
    }

}