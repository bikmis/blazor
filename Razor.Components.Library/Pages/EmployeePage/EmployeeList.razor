@page "/employeelist"

<h3>Employee List</h3>

<NavLink class="mb-4 mt-3 btn btn-primary" href="employeeadd">Add Employee</NavLink>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Date Of Birth</th>
            <th>Position</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Employees)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.MiddleName</td>
                <td>@employee.LastName</td>
                <td>@Convert.ToDateTime(employee.DateOfBirth).ToShortDateString()</td>
                <td>@employee.Position</td>
                <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#employeeEditModal" @onclick="() => EmployeeEdit.Employee = employee">Edit</button></td>
                <td><button type="button" class="btn btn-primary" @onclick="() => DeleteEmployee(employee.ID)">Delete</button></td>
            </tr>
        }
    </tbody>
</table>

<EmployeeEdit @ref="EmployeeEdit" OnEmployeeEdited="GetEmployees"></EmployeeEdit>

